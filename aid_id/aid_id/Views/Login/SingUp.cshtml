
@{
    ViewBag.Title = "SingUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="blockForm">
    <div class="container" id="blockAnalysis">
        <form>
            <!--   FORMULARIO DE REGISTRO   -->
            <!--   NOMBRE   -->
            <div class="form-group row">
                <div class="input-group-prepend clas-sm-2 clas-md-2">
                    <span class=" input-group-text">Nombre</span>
                 </div>
                <div class="col-6 col-md-10">
                    <input type="text" class="  form-control" id="colFormLabel" placeholder="Indique su ">
                </div>
            </div>
            <!--   APELLDO   -->
            <div class="form-group row">
                <div class="input-group-prepend col-sm-2">
                    <span class="input-group-text">Apellidos</span>
                </div>
                <div class="col-10">
                    <input type="text" class="form-control" id="colFormLabel" placeholder="Indique sus apellidos">
                </div>
            </div>
            <!--   PASSWORD   -->
            <div class="form-group row">
                <div class="input-group-prepend col-sm-2">
                    <span class="input-group-text">Contraseña</span>
                </div>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="colFormLabel" placeholder="Indique su contraseña">
                </div>
            </div>
            <!--   CONFIRM PASS   -->
            <div class="form-group row">
                <div class="input-group-prepend col-sm-2">
                    <span class="input-group-text">Confirmación</span>
                </div>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="colFormLabel" placeholder="Confirme su contraseña ">
                </div>
            </div>
            <!--   EDAD   -->
            <div class="form-group row">
                <div class="input-group-prepend col-sm-2">
                    <span class="input-group-text">Edad</span>
                </div>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="colFormLabel" placeholder="Indique su edad ">
                </div>
            </div>
            <!--   PESO   -->
            <div class="form-group row">
                <div class="input-group-prepend col-sm-2">
                    <span class="input-group-text">Peso</span>
                </div>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="colFormLabel" placeholder="Indique su peso en Kg  75Kg">
                </div>
            </div>
            <!--   ALTURA   -->
            <div class="form-group row">
                <div class="input-group-prepend col-sm-2">
                    <span class="input-group-text">Altura</span>
                </div>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="colFormLabel" placeholder="Indique su altura en cm    180cm">
                </div>
            </div>
            <!--   GLUCEMIA   -->

            <div class="form-group row">
                <div class="input-group-prepend col-sm-2">
                    <span class="input-group-text">Glucemia</span>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <input type="number" class="form-control" placeholder="min">
                    </div>
                    <div class="col-sm-2">
                        <input type="number" class="form-control" placeholder="max">
                    </div>
                </div>
            </div>
                <!--   INSULINA / CARBOHIDRATOS   -->
                <!--   INSULINA / GLUCOSA   -->
        </form>
    </div>
</form>

